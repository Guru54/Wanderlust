<% layout('/layouts/boilerplate') %>
   <style>
  #filetrs {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-top: 20px;
  }
  .filter {
    align-items: center; 
    margin-right: 20px;
    margin-top: 16px;
    opacity: 0.8;

    &:hover {
      opacity: 1;
      cursor: pointer;
    }
  }
  .tax-info{
    display: none;
  }
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    align-items: center;
    padding: 1rem;
    margin-left: 3.25rem;
    display: flex;

  }
 </style>
 <div id="filetrs">
              <div class="filter">
                   <div>
                          <i class="fa-solid fa-fire"></i>
